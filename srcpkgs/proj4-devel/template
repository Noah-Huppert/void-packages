# Template file for 'proj4'
pkgname=proj4-devel
version=4.9.2
wrksrc="proj-${version}"
revision=1
build_style=cmake
configure_args="-DPROJ_TESTS=OFF"
hostmakedepends="python3"
makedepends="sqlite-devel"
short_desc="Cartographic Projections Library"
maintainer="Noah Huppert <contact@noahh.io>"
license="MIT"
homepage="https://proj4.org"
distfiles="https://download.osgeo.org/proj/proj-${version}.tar.gz"
checksum=60bf9ad1ed1c18158e652dfff97865ba6fb2b67f1511bc8dceae4b3c7e657796
shlib_provides=libproj.so.9

post_install() {
	vlicense COPYING
}

pkg_install() {
	vmove usr/include
	vmove usr/share/man/man3
	vmove usr/lib/cmake
	vmove "usr/lib/*.so"
}
